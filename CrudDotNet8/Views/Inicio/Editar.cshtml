@model CrudDotNet8.Models.Contacto

    @{
        ViewData["Title"] = "Editar contacto";
    }

    <h1 class="text-center">Contacto con .NET 8 (.NET Core MVC)</h1>
    <div class="row">
        <div class="offset-12">
            <div class="card border">
                <div class="card-header bg-dark">
                    <h3 class="text-white"><strong>Editar al usuario @Model.Nombre</strong></h3>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        
                        <input type="hidden" asp-for="Id"/>
                        <input type="hidden" asp-for="FechaCreacion" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre"/>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" class="form-control" placeholder="Ingresa el Telefono"/>
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Celular" class="control-label"></label>
                            <input asp-for="Celular" class="form-control" placeholder="Ingresa el Celular"/>
                            <span asp-validation-for="Celular" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Ingresa el Email"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary d-block mx-auto"><i class="fa-solid fa-user"></i>Editar Usuario</button>
                        </div>
                        <a asp-action="Index" asp-controller="Inicio">Volver al inicio</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
